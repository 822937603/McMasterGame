<script>
 $(".dropdown-menu li a").click(function(){
  let selText = $(this).text();
  $(this).parents('.btn-group').find('.dropdown-toggle').html(selText+' <span class="caret"></span>');
  //badge element visible
  if(selText == "Patients")
  {
      let y = document.getElementById('vendorBadgeForm');
      y.style.display = 'none';

      let z = document.getElementById('providersBadgeForm');
      z.style.display = 'none';

  let x = document.getElementById('patientBadgeForm');
    if (x.style.display === 'none') {
        x.style.display = 'inline';
    } else {
        x.style.display = 'inline';
    }
  }

  //HANDLE VENDOR FORM
  if (selText == "Vendors")
  {
     let x = document.getElementById('patientBadgeForm');
