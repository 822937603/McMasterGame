    } else {
        y.style.display = 'inline';
    }
  }

  //HANDLE PROVIDERS FORM
  if (selText == "Providers")
  {
     let x = document.getElementById('patientBadgeForm');
      x.style.display = 'none';

      let z = document.getElementById('vendorBadgeForm');
      z.style.display = 'none';

      let y = document.getElementById('providersBadgeForm');
    if (y.style.display === 'none') {
        y.style.display = 'inline';
    } else {
        y.style.display = 'inline';
    }
  }
});

</script>

